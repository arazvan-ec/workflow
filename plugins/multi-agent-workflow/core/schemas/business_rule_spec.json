{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "business_rule_spec.json",
  "title": "Business Rule Specification",
  "description": "Schema for extracted business rules from project code",
  "type": "object",
  "required": ["rule_id", "name", "description", "last_extracted"],
  "properties": {
    "rule_id": {
      "type": "string",
      "description": "Unique identifier for the rule (e.g., 'AUTH-001', 'USER-002')"
    },
    "name": {
      "type": "string",
      "description": "Short name for the rule"
    },
    "description": {
      "type": "string",
      "description": "Full description of the business rule"
    },
    "category": {
      "type": "string",
      "enum": [
        "validation",
        "authorization",
        "calculation",
        "state_transition",
        "constraint",
        "workflow",
        "integration",
        "security",
        "data_integrity"
      ],
      "description": "Category of the business rule"
    },
    "last_extracted": {
      "type": "string",
      "format": "date-time"
    },
    "confidence": {
      "type": "string",
      "pattern": "^[0-9]{1,3}%$"
    },
    "entities_affected": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Entities this rule applies to"
    },
    "conditions": {
      "type": "object",
      "description": "Conditions that trigger this rule",
      "properties": {
        "when": {
          "type": "string",
          "description": "Natural language description of when rule applies"
        },
        "if": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of conditions (all must be true)"
        },
        "unless": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Exceptions to the rule"
        }
      }
    },
    "action": {
      "type": "object",
      "description": "What happens when rule is triggered",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["allow", "deny", "validate", "transform", "notify", "calculate"]
        },
        "description": { "type": "string" },
        "error_message": { "type": "string" }
      }
    },
    "severity": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"],
      "description": "Importance level of the rule"
    },
    "enforcement": {
      "type": "string",
      "enum": ["strict", "warning", "advisory"],
      "description": "How strictly the rule is enforced"
    },
    "implementation": {
      "type": "object",
      "description": "Where and how the rule is implemented",
      "properties": {
        "layer": {
          "type": "string",
          "enum": ["domain", "application", "infrastructure", "presentation"]
        },
        "files": {
          "type": "array",
          "items": { "type": "string" }
        },
        "methods": {
          "type": "array",
          "items": { "type": "string" }
        },
        "validators": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "examples": {
      "type": "array",
      "description": "Examples of rule application",
      "items": {
        "type": "object",
        "properties": {
          "scenario": { "type": "string" },
          "input": { "type": "string" },
          "expected": { "type": "string" }
        }
      }
    },
    "related_rules": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs of related business rules"
    },
    "api_endpoints_affected": {
      "type": "array",
      "items": { "type": "string" },
      "description": "API endpoints where this rule is enforced"
    },
    "extracted_from": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or context"
    }
  }
}
